    div(ng-controller="personCtrl")
        .st_title
            div(class="panel panel-danger")
                .panel-heading
                    |{{comment}}
                    .pull-right
                        a(tooltip="جدید", class="ng-binding", alt="default", data-toggle="modal", data-target=".bs-example-modal-lg", class="model_img img-responsive", ng-click="kala_load(p.GDG_UID);")
                            i(class="fa fa-plus fa-fw")
                .panel-body
                    table(ng-table="tableParams", class="table")
                        tbody(ng-repeat="p in $data")
                            tr(ng-class-odd="'odd'", ng-class-even="'even'")
                                td(title="'شناسه'" filter="{ ID: 'text'}" sortable="'ID'")
                                    | {{p.ID }}
                                td(title="'نام'" filter="{ FIRSTNAME: 'text'}" sortable="'FIRSTNAME'")
                                    |{{p.FIRSTNAME }}
                                td(title="'نام خانوادگی'" filter="{ LASTNAME: 'text'}" sortable="'LASTNAME'")
                                    | {{p.LASTNAME}}
                                td(title="'توضیحات'" filter="{ COMMENT: 'text'}" sortable="'COMMENT'")
                                    | {{p.COMMENT}}

                                //td
                                //    span(class="text-extra-large margin-bottom-10 block")
